{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": "./src",
        "outDir": "./dist",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "paths": {
            "@modules/*": ["modules/*"],
            "@configs/*": ["configs/*"],
            "@shared/*": ["shared/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "dist"]
}
